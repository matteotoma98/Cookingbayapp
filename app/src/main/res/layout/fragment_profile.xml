<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfilePic"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:contentDescription="profilePic"
            android:paddingBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/missingprofile" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="NOME UTENTE"
            android:textAlignment="center"
            android:textColor="@color/primaryText"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logout"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Esci"
            android:textColor="@color/colorAccent"
            app:icon="@drawable/ic_exit_to_app_black_24dp"
            app:iconTint="@color/colorAccent" />

        <Button
            android:id="@+id/cambia_account"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cambia account"
            android:textColor="@color/colorAccent"
            app:icon="@drawable/ic_people_outline_black_24dp"
            app:iconTint="@color/colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/darker_gray" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Modifica Nome Utente"
            android:textColor="@color/colorAccent"
            app:icon="@drawable/ic_person_outline_black_24dp"
            app:iconTint="@color/colorAccent" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Modifica Password"
            android:textColor="@color/colorAccent"
            app:icon="@drawable/ic_lock_outline_black_24dp"
            app:iconTint="@color/colorAccent" />
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/profileCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
